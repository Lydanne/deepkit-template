{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@rbac": ["./libs/rbac/src"],
      "@rbac/*": ["./libs/rbac/src/*"]
    }
  },
  "reflection": true,
  "include": ["src/**/*.ts", "libs/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
